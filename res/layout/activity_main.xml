<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:ems="10" />
    
    <Button
        android:id="@+id/p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/p1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:ems="10" />
    <Button
        android:id="@+id/p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/p2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:ems="10" />
    
    <Button
        android:id="@+id/p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/p3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:ems="10" />

    <Button
        android:id="@+id/shuffler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:onClick="shuffleCards"
        android:text="Shuffler" />
    
    <Button
        android:id="@+id/winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shuffler"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="computeWinner"
        android:text="Winner" />

</RelativeLayout>